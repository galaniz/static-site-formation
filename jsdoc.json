{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": [
      "jsdoc",
      "closure"
    ]
  },
  "source": {
    "include": ["src"],
    "includePattern": "\\.(ts|tsx)$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "plugins": [
    "plugins/markdown",
    "better-docs/component",
    "better-docs/typescript"
  ],
  "templates": {
    "better-docs": {
      "name": "Static Site Formation"
    }
  },
  "opts": {
    "destination": "jsdocs",
    "recurse": true
  }
}