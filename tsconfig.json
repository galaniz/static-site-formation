{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "esm",
    "declaration": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "./esm",
    "./cjs",
    "./lib",
    "node_modules"
  ]
}